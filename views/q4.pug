extends layouts/main-layout.pug
block content
    article
        header
            p= uuid
            h2 Vraag 4
            progress(value='4' max='5') 4/5
        if data
            form(method='POST' action='/question')
                input(type='hidden' value=uuid name='uuid')
                input(type='hidden' value='q4' name='q')
                fieldset
                    legend Cijfer
                    label(for='grade')  Hoe vond je de hulp van je mede-studenten tijdens de weken thuis?
                    input#grade(required type='number', name='grade' min='1', max='10' value=data.grade)
                fieldset
                    legend Beschrijving
                    label(for='desc')  Zou je hier wat op willen aanmerken?
                    textarea#desc(rows='4', wrap='hard', name='desc')= data.desc
                input(type='submit' value='Vorige vraag' name='action')
                input(type='submit' value='Volgende vraag' name='action')
        else
            form(method='POST' action='/question')
                input(type='hidden' value=uuid name='uuid')
                input(type='hidden' value='q4' name='q')
                fieldset
                    legend Cijfer
                    label(for='grade')  Hoe vond je de hulp van je mede-studenten tijdens de weken thuis?
                    input#grade(required type='number', name='grade' min='1', max='10')
                fieldset
                    legend Beschrijving
                    label(for='desc')  Zou je hier wat op willen aanmerken?
                    textarea#desc(rows='4', wrap='hard', name='desc')
                input(type='submit' value='Vorige vraag' name='action')
                input(type='submit' value='Volgende vraag' name='action')
